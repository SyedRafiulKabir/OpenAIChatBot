<!DOCTYPE html>
<html>
<head>
    <title>OpenAI Chatbot</title>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <style>
        /* Add some basic styling */
        body {
            font-family: Arial, sans-serif;
        }

        .chat-container {
            width: 50%;
            margin: 0 auto;
            margin-top: 50px;
        }

        .message-container {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
        }

        .user-message {
            text-align: right;
            color: blue;
        }

        .assistant-message {
            text-align: left;
            color: green;
        }

        .input-container {
            display: flex;
        }

            .input-container input {
                flex: 1;
                padding: 10px;
            }

            .input-container button {
                padding: 10px;
            }
    </style>
</head>
<body>
    <div class="chat-container">
        <div id="messages"></div>
        <div class="input-container">
            <input type="text" id="messageInput" placeholder="Type your message here..." />
            <button id="sendMessage">Send</button>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#sendMessage').on('click', function () {
                var messageContent = $('#messageInput').val();
                if (messageContent.trim() === '') {
                    alert('Please enter a message.');
                    return;
                }

                var userMessage = {
                    content: messageContent
                };

                $.ajax({
                    url: 'http://localhost:4329/api/chatbot/getresponse',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(userMessage),
                    success: function (data) {
                        $('#messageInput').val('');
                        addMessageToChat('user', userMessage.content);
                        addMessageToChat('assistant', data.choices[0].message.content);
                    },
                    error: function (xhr, status, error) {
                        console.log('Error:', error);
                        alert('An error occurred. Please try again later.');
                    }
                });
            });

            function addMessageToChat(role, content) {
                var messageContainer = $('<div class="message-container"></div>');
                messageContainer.addClass(role === 'user' ? 'user-message' : 'assistant-message');
                messageContainer.text(content);
                $('#messages').append(messageContainer);
            }
        });
    </script>
</body>
</html>
