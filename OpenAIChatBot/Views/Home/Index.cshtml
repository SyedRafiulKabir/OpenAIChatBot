@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OpenAI Chatbot</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding-top: 60px; /* Adjust as per your layout */
        }

        .chat-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .message-container {
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
            word-wrap: break-word;
        }

        .user-message {
            text-align: right;
            background-color: #007bff;
            color: #fff;
            margin-left: auto;
        }

        .assistant-message {
            text-align: left;
            background-color: #28a745;
            color: #fff;
            margin-right: auto;
        }

        .input-container {
            display: flex;
            align-items: center;
        }

            .input-container input[type="text"] {
                flex: 1;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

            .input-container button {
                padding: 10px 20px;
                margin-left: 10px;
                border-radius: 5px;
                background-color: #007bff;
                color: #fff;
                border: none;
                cursor: pointer;
            }

                .input-container button:disabled {
                    background-color: #007bff;
                    opacity: 0.5;
                    cursor: not-allowed;
                }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Welcome to the Chat Bot</h2>
        <div class="chat-container">
            <div id="messages"></div>
            <div class="input-container">
                <input type="text" id="messageInput" class="form-control" placeholder="Type your message here...">
                <button id="sendMessage" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            let sessionId = localStorage.getItem('sessionId') || '';

            $('#sendMessage').on('click', function () {
                sendMessage();
            });

            $('#messageInput').keypress(function (e) {
                if (e.which === 13) {
                    sendMessage();
                    e.preventDefault(); // Prevents the default behavior of the Enter key
                }
            });

            function sendMessage() {
                var messageContent = $('#messageInput').val().trim();
                if (!messageContent) {
                    alert('Please enter a message.');
                    return;
                }

                var userMessage = { content: messageContent };

                $.ajax({
                    url: 'http://localhost:4329/api/chatbot/getresponse',
                    type: 'POST',
                    contentType: 'application/json',
                    headers: {
                        'Session-Id': sessionId
                    },
                    data: JSON.stringify(userMessage),
                    beforeSend: function () {
                        $('#sendMessage').prop('disabled', true);
                    },
                    success: function (data) {
                        $('#messageInput').val('');
                        addMessageToChat('user', userMessage.content);
                        addMessageToChat('assistant', data.response.choices[0].message.content);

                        if (!sessionId) {
                            sessionId = data.sessionId;
                            localStorage.setItem('sessionId', sessionId);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error:', error);
                        alert('An error occurred. Please try again later.');
                    },
                    complete: function () {
                        $('#sendMessage').prop('disabled', false);
                    }
                });
            }

            function addMessageToChat(role, content) {
                var messageContainer = $('<div class="message-container"></div>');
                messageContainer.addClass(role === 'user' ? 'user-message' : 'assistant-message');
                messageContainer.text(content);
                $('#messages').append(messageContainer);
            }
        });
    </script>
</body>
</html>
